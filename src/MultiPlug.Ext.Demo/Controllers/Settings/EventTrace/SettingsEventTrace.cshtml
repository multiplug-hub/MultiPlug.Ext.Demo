@model MultiPlug.Base.Http.EdgeApp

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span2">
                </div>
                <div class="span8">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Event Trace Subscriptions</p>
                </div>
                <div class="span2" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <h3 class="box-header">
                    Subscriptions
                </h3>
                <div class="box">
                    <div class="row-fluid">
                        <div class="span1">
                        </div>

                        <div class="span11">
                            <b>Subscription</b>
                        </div>
                    </div>
                    <ul id="subscriptions" style="list-style: none;">
                        @foreach (var Subscription in @Model.Extension.Model)
                        {
                            <li>
                                <div class="row-fluid">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="span1">
                                                <button value="@Subscription" type="button" class="item btn btn-red delete-sub"><i class="icon-trash icon-large"></i></button>
                                            </div>
                                            <div class="span11">
                                                <input name="SubscriptionId" class="input-block-level mp-event-picker" type="text" value="@Subscription" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="span1">
                                        <button type="button" id="newsubscription" class="btn btn-green"><i class="icon-plus icon-large"></i></button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </section>
</form>

<script>
    function ApplyDelete(theSelector) {
        $(theSelector).on('click', '.delete-sub', function () {
            var id = $(this).attr('value');
            var closestli = $(this).closest("li");
            closestli.remove();
        });
    }

    $('#newsubscription').on('click', function () {
        $('#subscriptions').append(
            '<li>\
                <div class="row-fluid">\
                    <div class="control-group">\
                        <div class="controls">\
                            <div class="span1">\
                                <button value="" type="button" class="item btn btn-red delete-sub"><i class="icon-trash icon-large"></i></button>\
                            </div>\
                            <div class="span11">\
                                <input name="SubscriptionId" class="input-block-level mp-event-picker" type="text" value="" />\
                            </div>\
                        </div>\
                    </div>\
                </div>\
            </li>'
        );
        var newsubscription = $('#subscriptions li:last-child');
        applyMPEventPickerOnClick();
    });

    ApplyDelete(document);
</script>