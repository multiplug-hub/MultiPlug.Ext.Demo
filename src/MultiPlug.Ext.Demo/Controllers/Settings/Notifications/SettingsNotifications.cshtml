@model MultiPlug.Base.Http.EdgeApp

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">
        <div class="row-fluid">
            <div class="box">
                <div class="span12">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Demo and Debug</p>
                </div>
            </div>
        </div>

        @Include("MultiPlug.Ext.Demo.Demo_Settings_Navigation")

        <div class="row-fluid">
            <div class="span12">
                <div class="box non-collapsible">
                    <div class="span12">
                        <h4>New Notification</h4>
                        <div class="row-fluid">
                            <div class="well">
                                <div class="row-fluid">
                                    <div class="span3"><b>Message</b></div>
                                    <div class="span9"><input type="text" name="message" autocomplete="off"></div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span3"><b>Type</b></div>
                                    <div class="span9"><input type="text" name="type" autocomplete="off"></div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span3"></div>
                                    <div class="span9"><button type="submit" value="submit" class="item btn btn-green"><i class="icon-plus"></i> Add</button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="box non-collapsible">
                    <div class="span12">
                        <h4>Notifications</h4>
                        <div class="row-fluid">
                            <div class="well">
@foreach (var Notification in @Model.Extension.Model)
{
                                <div class="row-fluid">
                                    <div class="span12"><b>@Notification</b></div>
                                </div>
}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</form>
