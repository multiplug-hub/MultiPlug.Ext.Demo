@model MultiPlug.Base.Http.EdgeApp
<section class="row-fluid">
    <div class="row-fluid">
        <div class="box">
            <div class="span12">
                <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Upload File Example</p>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="box">
            <h4>Upload File</h4>
            <div class="row-fluid well">
                <p>Upload a file here.</p>

                <form class="form-horizontal" method="post" action="" accept-charset="utf-8" enctype="multipart/form-data">
                    <div class="control-group">
                        <label class="control-label" for="sideloadFile">File</label>
                        <div class="controls">
                            <input type="file" id="sideloadFile" class="form-control" name="file" accept=".txt">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn btn-green">Upload</button>
                        </div>
                    </div>
                </form>
            </div>

            <h4>File Contents</h4>
            <div class="row-fluid well">
                <textarea class="input-block-level" spellcheck="false" rows="3" wrap="hard" style="margin: 0px; height: 450px;">@Model.Extension.Model</textarea>
            </div>
        </div>
    </div>
</section>